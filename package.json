{
  "name": "weather",
  "version": "1.0.0",
  "description": "A weather api to communicate with Tempest weather",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/cloud-computing",
    "packages/fetchObservations",
    "packages/storeObservations"
  ],
  "scripts": {
    "build": "rimraf ./function && tsc --outdir ./function",
    "build:prod": "NODE_ENV=production npm run build",
    "deploy": "packages/storeObservations/bin/01-create-bucket.sh && bin/02-build-layer.sh && bin/03-deploy.sh",
    "coverage": "node node_modules/jest/bin/jest.js --coverage",
    "start:dev": "npx nodemon",
    "start:prod": "packages/storeObservations/bin/04-invoke.sh",
    "cleanup": "packages/storeObservations/bin/05-cleanup.sh",
    "start": "npm run build && node -e 'require(\"./function/index.js\").handler()'",
    "lint": "eslint --config ./eslint.config.mjs ."
  },
  "author": "Sam Younger",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.2",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.4.0"
  },
  "dependencies": {
    "@aws-sdk/client-athena": "^3.645.0",
    "@aws-sdk/client-s3": "^3.629.0",
